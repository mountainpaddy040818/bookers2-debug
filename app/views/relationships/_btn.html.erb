<% if current_user != user %>
  <% if current_user.following?(user) %>
    <td><%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-info" %></td>
      <% if current_user != user && current_user.following?(user) && user.following?(current_user) %>
        <td><%= link_to 'chatを始める', chat_path(user.id), class: "ml-3" %></td>
      <% end %>
  <% else %>
    <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-success" %></td>
  <% end %>
<% end %>